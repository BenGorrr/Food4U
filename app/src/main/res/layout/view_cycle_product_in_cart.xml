<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recycleViewNecessityProduct"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/oval_shape">

    <ImageView
        android:id="@+id/ivProductNecessityImg"
        android:layout_width="106dp"
        android:layout_height="98dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvProductNecessityName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btnDeleteProduct"
        app:layout_constraintStart_toEndOf="@+id/ivProductNecessityImg"
        app:layout_constraintTop_toTopOf="@+id/ivProductNecessityImg" />

    <TextView
        android:id="@+id/tvProductNecessityPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textColor="#F30101"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivProductNecessityImg"
        app:layout_constraintStart_toStartOf="@+id/tvProductNecessityName" />

    <TextView
        android:id="@+id/tvX"
        android:layout_width="10dp"
        android:layout_height="23dp"
        android:text="x"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvProductNecessityQuantity"
        app:layout_constraintEnd_toStartOf="@+id/tvProductNecessityQuantity"
        app:layout_constraintTop_toTopOf="@+id/tvProductNecessityQuantity"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvProductNecessityQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="34dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnDeleteProduct"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/circle_button"
        android:text="-"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>